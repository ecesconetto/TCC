@model IEnumerable<SGS.ViewModel.AlunoNotaViewModel>

@{
    ViewData["Title"] = "Notas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .aprovado {
        color: green;
    }

    .reprovado {
        color: red;
    }
</style>

<h1>Notas</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nome do aluno
            </th>
            <th>
                Disciplina
            </th>
            <th>
                Nota 1
            </th>
            <th>
                Nota 2
            </th>
            <th>
                Nota 3
            </th>
            <th>
                Média
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDisciplina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Media)
            </td>
            <td class="@item.Classe">
                @Html.DisplayFor(modelItem => item.Status)
            </td>
        </tr>
        }
    </tbody>
</table>
